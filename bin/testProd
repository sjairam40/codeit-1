#!/bin/bash

websites=("https://cluster-console.prod.lib.harvard.edu" "https://deployment.prod.lib.harvard.edu" "https://logs.prod.lib.harvard.edu/" "https://access.lib.harvard.edu/redirects/healthcheck" "https://acorn.lib.harvard.edu/" "https://arstaff.lib.harvard.edu/" "https://api.lib.harvard.edu/v2/items" "https://bibdata.lib.harvard.edu/readinesscheck" "https://booklabeler.lib.harvard.edu/" "https://curiosity.lib.harvard.edu" "https://drsmdsrv.lib.harvard.edu/drs_metadata/rest/heartbeat" "https://drsmqsrv-prod.lib.harvard.edu/drs2_activemq/rest/heartbeat" "https://eadchecker.lib.harvard.edu/" "https://embed.lib.harvard.edu" "https://fts.lib.harvard.edu/fts/" "https://hollisarchives.lib.harvard.edu" "https://hgl.harvard.edu/" "https://hollisarchives.lib.harvard.edu" "https://ids.lib.harvard.edu" "https://iiif.lib.harvard.edu" "https://inlib-adm.lts.harvard.edu" "https://jobmon-prod.lib.harvard.edu" "https://listview.lib.harvard.edu" "https://mps.lib.harvard.edu" "https://nrs.lib.harvard.edu/api/lookup/urn-3:fhcl:24851885" "https://policyadmin.lib.harvard.edu/policy/servlet/admin" "https://pds.lib.harvard.edu/pds" "https://secureexit.lib.harvard.edu/readinesscheck" "https://tools.lib.harvard.edu/hdforms/retrieval" "https://webservices.lib.harvard.edu/rest/v3/hollis/marc/isbn/9780307269751?jsonp=foo" "https://wordshack.lib.harvard.edu/wordshack/rest/term/adminFlag/220" "https://viewer.lib.harvard.edu")

for site in "${websites[@]}"

do

    status_code=$(curl -Is $site | head -n 1 | cut -d ' ' -f 2)

    echo "$site: $status_code"

done
