#!/bin/bash

websites=("https://cluster-console.qa.lib.harvard.edu" "https://deployment.qa.lib.harvard.edu" "https://logs.qa.lib.harvard.edu/login" "https://acorn-qa.lib.harvard.edu/records/list" "https://arclight-qa.lib.harvard.edu" "https://aspacepui-qa.lib.harvard.edu/" "https://aspace-qa.lib.harvard.edu" "https://booklabeler-qa.lib.harvard.edu" "https://collex-qa.lib.harvard.edu" "https://curiosity-qa.lib.harvard.edu" "https://dims-qa.lib.harvard.edu/readiness" "https://drsmqsrv-qa.lib.harvard.edu/drs2_activemq/rest/heartbeat" "https://eda-qa.lib.harvard.edu/" "https://embed-qa.lib.harvard.edu/" "https://fts-qa.lib.harvard.edu/fts" "https://geodata-qa.lib.harvard.edu/" "https://hgl-qa.lib.harvard.edu" "https://ids-qa.lib.harvard.edu" "https://imgconv-dev.lib.harvard.edu/health" "https://jobmon-qa.lib.harvard.edu" "https://jstor-qa.lib.harvard.edu" "https://lc-tools-qa.lib.harvard.edu/csv/" "https://lc-tools-qa.lib.harvard.edu/oai" "https://listview-qa.lib.harvard.edu" "https://lts-pipelines-qa.lib.harvard.edu" "https://nrs-qa.lib.harvard.edu/URN-3:FHCL:100043633:MANIFEST:2" "https://nrsadmin-qa.lib.harvard.edu/" "https://olivia-qa.lib.harvard.edu/olivia/servlet/OliviaServlet?storedProcedure=getMetadata&oracleID=1062512" "https://policyadmin-qa.lib.harvard.edu" "https://talkwithhollis-qa.lib.harvard.edu" "https://viewer-qa.lib.harvard.edu/" "https://bibdata-qa.lib.harvard.edu")

for site in "${websites[@]}"

do

    status_code=$(curl -Is $site | head -n 1 | cut -d ' ' -f 2)

    echo "$site: $status_code"

done